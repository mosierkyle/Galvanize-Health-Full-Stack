<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="/dashboard.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <script src="/dashboardScript.js" defer></script>
</head>
<body>
    <div id="main-container">
        <div id="header">
            <div id="welcome">
                <div id="welcome-text">Welcome, <span id="user"><%= user.firstName %></span></div>
            </div>
            <div id="search">
                <div id="search-bar-div">
                    <svg xmlns="http://www.w3.org/2000/svg" width="17" height="17" viewBox="0 0 17 17" fill="none" role="img" class="search-icon">
                        <path d="M1.5 7.75C1.5 9.4076 2.15848 10.9973 3.33058 12.1694C4.50269 13.3415 6.0924 14 7.75 14C9.4076 14 10.9973 13.3415 12.1694 12.1694C13.3415 10.9973 14 9.4076 14 7.75C14 6.0924 13.3415 4.50269 12.1694 3.33058C10.9973 2.15848 9.4076 1.5 7.75 1.5C6.0924 1.5 4.50269 2.15848 3.33058 3.33058C2.15848 4.50269 1.5 6.0924 1.5 7.75V7.75Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                        <path d="M12.814 12.8132L15.5 15.4999" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                      </svg>
                    <input id="search-bar" placeholder="Search..." type="text" name="search">
                </div>
            </div>
            <div id="icons">
                <div id="profile"><span class="material-symbols-outlined">
                    account_circle
                    </span></div>
            </div>
        </div>
        <div id=sidebar>
            <div id="logo-div"><img id="logo" src="Galvanize Ai 4 copy.png" alt="" /></div>
            <div id="links-div">
                <ul id="links-list">
                    <a id="dashboard-item" href="/dashboard" class="item">
                        <li id="dashboard-svg"class="item"><span class="list-svg material-symbols-outlined">
                            grid_view
                            </span>   
                            <span id="dashboard-word"class="menu-item">Dashboard</span>
                        </li>
                    </a>
                    <!-- <li class="item">
                        <span class="list-svg material-symbols-outlined">
                        trending_up
                        </span>   Progress
                    </li> -->
                    <a href="/workout" class="item">
                        <li class="item">
                            <span class="list-svg material-symbols-outlined">
                            exercise
                            </span>   
                            <span class="menu-item">Workout</span>
                        </li>
                    </a>
                    <a href="/diet" class="item">
                        <li class="item">
                            <span class="list-svg material-symbols-outlined">
                            restaurant
                            </span>   
                            <span class="menu-item">Diet</span>
                        </li>
                    </a>
                    <a href="/nutrition" class="item">
                        <li class="item">
                            <span class="list-svg material-symbols-outlined">
                                pill
                                </span>   
                                <span class="menu-item">Nutrition</span>
                        </li>
                    </a>
                </ul>
              </div>
            <div id="logout-div" class="item">
                <form id="logout-form" method="post" action="logout">
                    <span class="list-svg material-symbols-outlined">
                    logout
                    </span>
                    <p class="item menu-item" id="logout">Logout</p>
                </form>
            </div>
        </div>
        <div id="content">
            <div class="panel" id="user-info" href="">
                <!-- <div id="user-header-div" class="panel-header-div">
                    <p id="user-panel-header" class="panel-header">Profile</p>
                </div> -->
                <div id="user-info-content">
                    <div id="user-heading">
                        <span id="user-img"class="material-symbols-outlined">
                            account_circle
                            </span>
                        <p id="user-name"><%= user.firstName %> <%= user.lastName %></p>
                        <p id="user-username">@<%= user.username %></p>
                    </div>
                    <div id="user-health">
                        <div class="user-health-div">
                            <p class="user-health-title">Weight</p>
                            <div class="user-health-num"><%= user.health.weight %> lb</div>
                        </div>
                        <div class="user-health-div">
                            <p class="user-health-title">Height</p>
                            <div class="user-health-num"><%= user.health.height %></div>
                        </div>
                        <div class="user-health-div">
                            <p class="user-health-title">Age</p>
                            <div class="user-health-num"><%= user.health.age %></div>
                        </div>
                    </div>
                <div class="profile-info-div" id="user-activity">
                    <p class="user-thing-title">Activity</p>
                    <p class="user-thing-content"><%= user.health.activity%></p>
                </div>
                <div class="profile-info-div" id="user-experience">
                    <p class="user-thing-title">Level</p>
                    <p class="user-thing-content"><%= user.health.skillLevel %></p>
                </div>
                <div class="profile-info-div" id="user-time">
                    <p class="user-thing-title">Time Availability</p>
                    <p class="user-thing-content"><%= user.health.timeAvailability %></p>
                </div>
                <div class="profile-info-div" id="user-exercises">
                    <p class="user-thing-title">Preffered Exercises</p>
                    <p class="user-thing-content"><%= user.health.prefferedExercise %></p>
                </div>
                <div class="profile-info-div" id="user-goal">
                    <p class="user-thing-title">Goal</p>
                    <p class="user-thing-content"><%= user.goals.overall %></p>
                </div>
                </div>
            </div>
            <a class="panel" id="workout" href="/workout">
                    <div class="panel-header-div">
                        <p class="panel-header">Workout Plan</p>
                    </div>
                    <div class="mask">
                        <div class="panel-preview">
                            <% Object.keys(user.fitnessPlan.body).forEach(function(key) { %>
                                <% if (key.startsWith('subheading')) { %>
                                    <p class="response-subheading"><%= user.fitnessPlan.body[key] %></p>
                                <% } else if (key.startsWith('content')) { %>
                                    <p class="response-content"><%= user.fitnessPlan.body[key] %></p>
                                <% } %>
                            <% }); %>
                        </div>
                    </div>
            </a>
            <a href="/diet" class="panel" id="diet">
                    <div class="panel-header-div">
                        <p class="panel-header">Diet Plan</p>
                    </div>
                    <div class="mask">
                        <div class="panel-preview">
                            <% Object.keys(user.dietPlan.body).forEach(function(key) { %>
                                <% if (key.startsWith('subheading')) { %>
                                    <p class="response-subheading"><%= user.dietPlan.body[key] %></p>
                                <% } else if (key.startsWith('content')) { %>
                                    <p class="response-content"><%= user.dietPlan.body[key] %></p>
                                <% } %>
                            <% }); %>
                        </div>
                    </div>
            </a>
            <a class="panel" id="nutrition" href="/nutrition">
                    <div class="panel-header-div">
                        <p class="panel-header">Nutrition Plan</p>
                    </div>
                    <div class="mask">
                        <div class="panel-preview">
                            <% Object.keys(user.nutritionPlan.body).forEach(function(key) { %>
                                <% if (key.startsWith('subheading')) { %>
                                    <p class="response-subheading"><%= user.nutritionPlan.body[key] %></p>
                                <% } else if (key.startsWith('content')) { %>
                                    <p class="response-content"><%= user.nutritionPlan.body[key] %></p>
                                <% } %>
                            <% }); %>
                        </div>
                    </div>
            </a>
        </div>
    </div>
</body>
</html>